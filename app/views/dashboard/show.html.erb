<nav>
<div class="nav-wrapper">
  <a href="#" class="brand-logo">Ya Done Got Git</a>
  <ul id="nav-mobile" class="right hide-on-med-and-down">
    <li><%= link_to "Logout", logout_path, method: :delete %></li>
  </ul>
</div>
</nav>
<div class="container">

  <div class="row">
    <div class="col m3 user-stats">
        <%= image_tag @user.image_url, class: "user-image" %>
        <h2 class="user-name"> <%= @user.name %> </h2>
        <h2 class="user-nickname"> <%= @user.nickname %> </h2>
        <div class="user-email">
          <%= link_to @user.email, "mailto:#{@user.email}" %>
        </div>
        <div class="row center">
          <div class="row small-bottom-margin left-margin">
            <div class="col m4 center dash-numbers">
              <div class="row stats-numbers small-bottom-margin">
                <%= @user.number_followers %>
              </div>
              <div class="row stats-text">
                Followers
              </div>
            </div>
            <div class="col m4 center dash-numbers">
              <div class="row stats-numbers small-bottom-margin">
                <%= @user.number_starred_repos %>
              </div>
              <div class="row stats-text">
                Starred
              </div>
            </div>
            <div class="col m4 center dash-numbers">
              <div class="row stats-numbers small-bottom-margin">
                <%= @user.number_following %>
              </div>
              <div class="row stats-text">
                Following
              </div>
            </div>
          </div>
        </div>
      </div>
    <div class="col m9">
      <div class="row">
        <div class="row">
     <div class="col s12 m4">
       <div class="card blue-grey darken-1">
         <div class="card-content white-text">
           <div class="col m12">
             <span class="card-title center"></span>
             <div class="contributions center">
               Contributions in the last year
               <div class="contribution-streak-number center">
                 <%= @user.contributions_in_last_year %>
               </div>
             </div>
           </div>
         </div>
         <div class="card-action">
         </div>
       </div>
     </div>

     <div class="col s12 m4">
       <div class="card blue-grey darken-1">
         <div class="card-content white-text">
           <div class="col m12">
             <span class="card-title center"></span>
             <div class="longest-streak center">
               Longest Streak
               <div class="contribution-streak-number center">
                 <%= @user.longest_streak %>
               </div>
             </div>
           </div>
         </div>
         <div class="card-action">
         </div>
       </div>
     </div>

     <div class="col s12 m4">
       <div class="card blue-grey darken-1">
         <div class="card-content white-text">
           <div class="col m12">
             <span class="card-title center"></span>
             <div class="current-streak center">
               Current Streak
               <div class="contribution-streak-number center">
                 <%= @user.current_streak %>
               </div>
             </div>
           </div>
         </div>
         <div class="card-action">
         </div>
       </div>
     </div>
   </div>
      </div>
      <div class="row">
     <div class="col s12">
       <ul class="tabs">
         <li class="tab col s3"><a href="#recent-commits">Recent Commits</a></li>
         <li class="tab col s3"><a class="active" href="#repos">Repos</a></li>
         <li class="tab col s3"><a href="#organizations">Organizations</a></li>
       </ul>
     </div>
     <div id="recent-commits" class="col s12">
       <div class="recent-commits">
         <% @user.recent_commits.each do |commit| %>
         <div class="row">
           <div class="col m6 center">
             <%= pluralize commit.commit_count, "commit" %> to <%= link_to commit.repo, commit.url %>
           </div>
           <div class="col m6 center">
             <%= commit.formatted_date %>
           </div>
         </div>
         <% end %>
       </div>
     </div>
     <div id="repos" class="col s12">
       <% @user.repos.each do |repo| %>
       <div class="row">
         <div class="col m4 center">
           <%= link_to repo.name, repo.url %>
         </div>
         <div class="col m4 center">
           Forks: <%= repo.forks_count %>
         </div>
         <div class="col m4 center">
           Stargazers: <%= repo.stargazers_count %>
         </div>
       </div>
       <% end %>
     </div>
     <div id="organizations" class="col s12">
       <ul>
         <% @user.organizations.each do |org| %>
         <div class="col m4">
           <li class="organization center">
             <%= link_to org.name, org.url %>
           </li>
         </div>
         <% end %>
       </ul>
     </div>
   </div>
  </div>
  </div>
</div>
